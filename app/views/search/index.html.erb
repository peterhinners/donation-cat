 <div class="ui vertical stripe segment">
    <div class="ui middle aligned stackable grid container">
      <div class="row">
        <div class="center aligned column">
          <h2 class="search-display">Search results:</h2>
          <h3 class="search-display">Search term: <em><%= @search_query %></em></h3>

          <% if @charities.empty? && @categories.empty? %>
            <h1>Sorry, no results were found. Please try another set of search words.</h1>
          <% end %>

          <% unless @charities.empty? %>
          <h3 class="search-display">Charities:</h3>
          <table class="ui teal table">
            <% @charities.each do |charity| %>
             <tr><td><p><a href="/charities/<%= charity.to_param %>"><%= charity.name %></a></p></td></tr>
            <% end %>
            </table>
          <% end %>

          <% unless @categories.empty? %>
            <h3 class="search-display">Categories</h3>
            <table class="ui teal table">
            <% @categories.each do |category| %>
              <tr><td><p><a href="/categories/<%= category.to_param %>"><%= category.name %></a></p></td></tr>
            <% end %>
            </table>
          <% end %>

          <% if @charities.empty? && @categories.empty? %>
          <%= image_tag("playfulcat.png", :width => 200, :height => 150, :class => "search-image") %>
          <% end %>


        </div>
      </div>
    </div>
  </div>

</div>


