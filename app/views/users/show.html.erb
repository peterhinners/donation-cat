      <h2 class="ui icon header">
        <i class="user icon"></i>
      <h1><%= @user.username.capitalize %>'s Profile</h1>
      <div class="ui grid">
        <div class="six wide column">
          <h3>Starred Charities</h3>
        <% if @starred_charities %>
          
            <% @starred_charities.each do |charity| %>
               <p><%= link_to charity.name, charity_path(charity) %></p>
            <% end %>
          
        <% end %>
        </div>

        <div class="four wide centered text column">
          <h3>Your Interest Categories</h3>
        <% if @categories %>
          
            <% @categories.each do |category| %>
              <p><%= link_to category.name, category_path(category) %></p>
            <% end %>
          
        <% end %>
        </div>

        <div class="six wide column">
          <h3>Recently Viewed Charities</h3>
        <% if @visited_charities %>
          
            <% @visited_charities.each do |charity| %>
              <p><%= link_to charity.name, charity_path(charity) %></p>
            <% end %>
          
        <% end %>
        </div>


        <div class="eight wide centered column">
          <h3>Recommended Charity:</h3>
          <p><%= link_to @recommended_charity.name, charity_path(@recommended_charity) %></p>
          <p><%= @recommended_charity.description %></p>
      </div>
  </div>
  </div>