
  <div class="ui vertical stripe segment">
    <div class="ui six column centered grid">
        <div class="six wide column">
        <div class="ui teal inverted segment">
           <h1>Login</h1>
              <form class="ui form">
      			  <%= form_tag '/login' do %>
      			  Username: 
              <div class="field">
               <%= text_field_tag :username %>
               </div>
      			  Password:
               <div class="field"><%= password_field_tag :password %>
              </div>
              <div class="ui error message">
              <div class="header">Invalid Login</div>
                <p>Wrong username or password.</p>
              </div>
      			  <button class="ui button"><%= submit_tag "Submit" %>
              </button>
      			<% end %>
      			<% if @error %>
      			  <p><%= @error %></p>
      			<% end %>
            </form>
        </div>
      </div>
    </div>
  </div>

</div>
